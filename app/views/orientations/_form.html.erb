<%= simple_form_for [@site, @orientation], html: { class: 'form' } do |f| %>
  <%= f.input :comment %>
  <%= f.association :worker, collection: Worker.non_managers, label_method: :name_with_designation, value_method: :id %>
  <%= f.association :hazards, collection: @site.hazards, as: :check_boxes, wrapper: :vertical_radio_and_checkboxes %>
  <%= f.button :submit %>
<% end %>
