<h1>Location: <Site_name></h1>

<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Worker</th>
      <th>Signed in at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logons.each do |logon| %>
      <tr>
        <td><%= Worker.find(logon.worker_id).company.name %></td>
        <td><%= Worker.find(logon.worker_id).full_name  %></td>
        <td><%= logon.created_at.strftime("%H:%M:%S - %b %d, %g") %></td>
        <td><%= link_to 'Sign out now', logon_path(logon) , method: :delete, data: { confirm: 'Logging Out.. Are you sure?' }, class: "btn btn-primary btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign in', new_logon_path %>